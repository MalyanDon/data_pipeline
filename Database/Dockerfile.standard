FROM node:18-alpine

WORKDIR /app

# Install dependencies
RUN apk add --no-cache python3 py3-pip make g++ postgresql-client

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install --production

# Copy all files
COPY . .

# Create upload directory
RUN mkdir -p temp_uploads

# Debug: Show what we have
RUN echo "=== STANDARD VERIFICATION ===" && \
    echo "📁 Files in /app:" && ls -la && \
    echo "📁 JavaScript files:" && ls -la *.js && \
    echo "📦 Package.json start script:" && grep -A 1 -B 1 "start" package.json

# Expose port
EXPOSE 3000

# Start with npm start
CMD ["npm", "start"] 